<div class="sign_in">
<h1>SIGN IN</h1>
<%= form_tag '/login' do %>
  <p>
    <%= label_tag 'email' %><br/>
    <%= text_field_tag 'email', nil, :autofocus => true %>
  </p>
  <p>
    <%= label_tag 'password' %><br/>
    <%= password_field_tag 'password' %>
  </p>
  <p>
    <%= submit_tag 'Login', :id => 'submit' %>
  </p>
<% end %>

</div>

<div id="vmap" style="width: 960px; height: 500px; display:none;"></div>