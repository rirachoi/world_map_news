<div class='user_form'>
<%= form_for @user do |f| %>
<p>
  <%= f.label :username %><br/>
  <%= f.text_field :username, :autofocs => true %>
</p>
<p>
  <%= f.label :email %><br/>
  <%= f.email_field :email, :placeholder => 'hello@worldmapnews.com' %>
</p>
<p>
  <%= f.label :native_country, 'Country' %><br/>
  <%= f.select :native_country, options_for_select(Country.countries_list.collect{|country| [country[:name], country[:code].downcase ]})%>

</p>
<p>
  <%= f.label :password %><br/>
  <%= f.password_field :password %><br/>

  <%= f.label :password_confirmation %><br/>
  <%= f.password_field :password_confirmation %>
</p>
<p class='submit_sign_up'>
  <%= f.submit :class => 'submit_sign_up' %>
  <% end %>
</p>
</div>